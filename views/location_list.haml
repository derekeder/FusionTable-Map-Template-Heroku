.row-fluid
  .span9
    %h2 Condom Distribution & STI/STD Testing Sites
    
    %table.table.table-bordered
      %thead
        %tr
          %th Name
          %th County
          %th Location
          / %th Hours
          %th Type
      %tbody
        - @condom_dist_locations.each do |location|
          - if location[:condoms] == "1"
            %tr
              %td
                =location[:name]
              %td
                =location[:county]
              %td
                =location[:location]
              %td
                Condom Distribution Site
        - @sti_clinics.each do |location|
          - if location[:sti] == "1"
            %tr
              %td
                =location[:name]
              %td
                =location[:county]
              %td
                =location[:location]
              %td
                STD/STI Testing Site
        - @abortion_clinics.each do |location|
          - if location[:pregnancy] == "1"
            %tr
              %td
                =location[:name]
              %td
                =location[:county]
              %td
                =location[:location]
              %td
                Abortion Clinic
